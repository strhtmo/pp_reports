<!DOCTYPE html>
<html lang="en">
  <%- include('partials/headTag', {title: 'Edit News'}) %>
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Form Add News</title>
  <style>
    * {
      margin: 0px;
      padding: 0px;
      box-sizing: border-box;
    }
    .container {
      width: 50%;
      height: fit-content;
      padding: 50px;
      border-radius: 12px;
      background-color: #fff;
      box-shadow: 0 4px 6px 0 hsla(0, 0%, 0%, 0.2);
    }
    .form-add>input,
    .form-add>select {
      margin: 5px 0px;
      padding: 5px;
      width: 100%;
      height: 40px;
      border-radius: 5px;
      border: solid 1px gray;
    }
    form div {
      display: flex; 
      justify-content: center;
    }
    input[type=button], input[type=submit]{
      width: 100px;
      height: 30px;
      margin: 10px;
      border: none;
      border-radius: 5px;
      color: white;
      background-color: rgb(0, 0, 0);
    }
    
  </style>
</head>
<body>
  <%- include('partials/navBar') %>
  <div style="display:flex; justify-content:center; margin: 20px">
    <div class="container">
      <form action="/reports/<%= report.id %>/edit" method="post" class="form-add">
        <h1 style="text-align: center">Form Edit News</h1>
        <label>Title</label><br>
        <input type="text" placeholder="Title" name="title" value="<%= report.title %>"><br>
        <label>Image Url</label><br>
        <input type="text" placeholder="imgUrl" name="imgUrl" value="<%= report.imgUrl %>"><br>
        <label >Topic</label><br>
        <input type="text" placeholder="Topic" name="topic" value="<%= report.topic %>"><br>
        <label>Description</label><br>
        <textarea name="description" class="no-outline" cols="117" rows="25" style=" width:598px; height: 350px; white-space: pre-line;"><%= report.description %></textarea><br>
        <label>Writer</label><br>
        <select name = "UserId" id="">
            <option selected disabled>---SELECT ONE---</option>
            <% users.forEach(el => { %>
            <% if(el.id == report.UserId){ %>
                <option value="<%= el.id %>" selected><%= el.userName %></option>
                <% } else { %>
                  <option value="<%= el.id %>"><%= el.userName %></option>
                  <% } %>
              <% }) %>
          </select> <br>
        <div>
          <input type="submit" value="Submit">
          <a href="/reports" style="text-decoration: none;"><input type="button" value="Cancel"></a>
        </div>
      </form>
      <% if (error) { %>
        <% error.split(',').forEach(el => { %>
          <p style="color: red"> 
            <%= el %>
          </p>
          <% }) %>
      <% } %>
      </div>
  </div>
</body>
</html>